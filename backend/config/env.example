# Copy this file to .env and update the values for your production environment

# Server Configuration
NODE_ENV=production
PORT=5000

# Database
MONGO_URI=mongodb://localhost:27017/foiyfoshi_production

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_at_least_32_chars_long
JWT_EXPIRE=30d

# Email Configuration (Gmail SMTP recommended for production)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# Admin Configuration (Change these credentials immediately!)
ADMIN_EMAIL=admin@foiyfoshi.mv
ADMIN_PASSWORD=your_secure_admin_password_here

# Security
CORS_ORIGIN=https://your-domain.com
BCRYPT_ROUNDS=12

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100 